<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SportsPlanning\Sport" table="planningsports" repository-class="SportsPlanning\Sport\Repository">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="number" column="number" type="smallint" nullable="false" unique="false"/>
    <field name="nrOfGamePlaces" column="nrOfGamePlaces" type="smallint" nullable="false" unique="false"/>
    <many-to-one field="planning" target-entity="SportsPlanning" inversed-by="sports">
      <join-columns>
        <join-column name="planningId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="fields" target-entity="SportsPlanning\Field" mapped-by="sport" orphan-removal="true">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
  </entity>
</doctrine-mapping>