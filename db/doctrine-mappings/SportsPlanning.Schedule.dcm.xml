<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SportsPlanning\Schedule" table="planningSchedules" repository-class="SportsPlanning\Schedule\Repository">
    <field name="nrOfPlaces" column="nrOfPlaces" type="smallint" nullable="false" unique="false"/>
    <field name="gamePlaceStrategy" column="gamePlaceStrategy" type="enum_GamePlaceStrategy" nullable="false"
           unique="false"/>
    <field name="sportsConfigName" column="sportsConfigName" type="string" length="1024" nullable="false" unique="false"/>
    <one-to-many field="sportSchedules" target-entity="SportsPlanning\Schedule\Sport" mapped-by="schedule">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
  </entity>
</doctrine-mapping>