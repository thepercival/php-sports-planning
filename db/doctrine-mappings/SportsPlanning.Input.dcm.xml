<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SportsPlanning\Input" table="planningInputs" repository-class="SportsPlanning\Input\Repository">
      <field name="selfReferee" column="selfReferee" type="enum_SelfReferee" nullable="false" unique="false"/>
      <field name="createdAt" column="createdAt" type="datetime_immutable" nullable="false" unique="false"/>
      <field name="recreatedAt" column="recreatedAt" type="datetime_immutable" nullable="true" unique="false"/>
      <field name="minNrOfBatches" column="minNrOfBatches" type="smallint" nullable="true" unique="false"/>
      <field name="seekingPercentage" column="seekingPercentage" type="smallint" nullable="false" unique="false"/>
      <field name="uniqueString" column="uniqueString" type="string" length="512" nullable="false" unique="false"/>
      <field name="gamePlaceStrategy" column="gamePlaceStrategy" type="enum_GamePlaceStrategy" nullable="false"
             unique="false"/>
      <one-to-many field="plannings" target-entity="SportsPlanning\Planning" mapped-by="input">
          <cascade>
              <cascade-remove/>
          </cascade>
      </one-to-many>
      <one-to-many field="poules" target-entity="SportsPlanning\Poule" mapped-by="input" orphan-removal="true">
          <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <one-to-many field="sports" target-entity="SportsPlanning\Sport" mapped-by="input" orphan-removal="true">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <one-to-many field="referees" target-entity="SportsPlanning\Referee" mapped-by="input" orphan-removal="true">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <indexes>
      <index columns="selfReferee"/>
      <index columns="createdAt"/>
    </indexes>
  </entity>
</doctrine-mapping>